{
  "restartable": "rs",
  "ignore": [
    ".git",
    "node_modules/**/node_modules",
    "doc/",
    ".vscode/"
  ],
  "verbose": true,
  "execMap": {
    "js": "node --harmony"
  },
  "exec":"ts-node src/app.ts",
  "events": {
    "restart": ""
  },
  "watch": [
    "src/*/**"
  ],
  "env": {
    "NODE_ENV": "development"
  },
  "ext": "js,json,ts"
}